<h1>All Posts</h1>

<%= link_to "New Post", new_post_path, class: "btn btn-success mb-3" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= truncate(post.content, length: 50) %></td>
        <td>
          <%= link_to "Show", post_path(post), class: "btn btn-info btn-sm" %>
          <%= link_to "Edit", edit_post_path(post), class: "btn btn-warning btn-sm" %>
          <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>